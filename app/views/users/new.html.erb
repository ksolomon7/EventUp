<p style = "font-weight:bold; font-size:20px"> Please fill out the following information </p>
<hr>
<% if @error %>
    <% @error.each do |error| %>
    <%= error %><br>
    <%end%>
<%end%>
<div class = "row">
<div class = "col-6">
<%= form_for @user, html:{class:"text-center"} do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
    <%= f.label :age %>
    <%= f.number_field :age %><br>
    <%= f.label :profile_description %>
    <%= f.text_field :profile_description %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br>
    <%= f.submit "Register User" %><br>
<%end%>
</div>